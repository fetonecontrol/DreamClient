@{
  Layout = "_Layout";
}
@using DreamClient.Models
<h1> Find the patterns:</h1>

<form action="/Dreams/Filter" method="post">
  <label for="search">Search</label>
  <input type="text" id="search" name="search">
  <button type="submit" class="btn btn-primary">Submit!</button>
</form>

<ol>
@foreach(Dream dream in Model)
{
  <ul>
    <li>Date: @dream.Date</li>
    <li>User: @dream.UserName</li>
    <li>Title: @dream.Title</li>
    <li>Body: @dream.Body</li>
  </ul>
  <br/>
}
</ol>